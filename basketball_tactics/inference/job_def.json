{
  "jobDefinitionName": "bb-tactics-gpu",
  "type": "container",
  "containerProperties": {
    "image": "<ACCOUNT_ID>.dkr.ecr.<REGION>.amazonaws.com/bb-tactics-gpu:latest",
    "vcpus": 4,
    "memory": 8192,
    "resourceRequirements": [
      {"value": "1", "type": "GPU"}
    ],
    "command": ["python", "run_inference.py"],
    "environment": [
      {"name": "TACTICS_RAW_BUCKET", "value": "tactics-raw"},
      {"name": "TACTICS_RESULT_BUCKET", "value": "tactics-results"}
    ],
    "privileged": false,
    "readonlyRootFilesystem": false
  },
  "retryStrategy": {"attempts": 1}
}
